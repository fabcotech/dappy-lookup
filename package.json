{
  "name": "dappy-lookup",
  "version": "1.0.0",
  "description": "library that resolves names from dappy name system",
  "author": "FABCO <contact@fabco.tech>",
  "license": "MIT",
  "homepage": "https://github.com/fabcotech/dappy-lookup",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabcotech/dappy-lookup"
  },
  "keywords": [
    "dappy",
    "rchain",
    "blockchain",
    "domain",
    "name system",
    "dns"
  ],
  "main": "dist/dappy-lookup.cjs.js",
  "browser": "dist/dappy-lookup.umd.js",
  "module": "dist/dappy-lookup.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/**/*.spec.ts'",
    "test:watch": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register --watch --watch-files src/**/*.ts  'src/**/*.spec.ts'",
    "build": "rm -rf dist && rollup -c",
    "build:types": "rm -rf build && tsc -p ./tsconfig.json --outDir build --declaration true && api-extractor run"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "mocha": "^9.2.0",
    "rollup": "^2.67.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "@microsoft/api-extractor": "^7.19.4"
  }
}
